<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/gameLayout"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/white"
	android:tag="@string/is_linear_layout">

	<LinearLayout
		android:id="@+id/topPanel"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:orientation="horizontal">

		<Button
			android:id="@+id/backToStartScreen"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="2"
			android:text="@string/back" />

		<Switch
			android:id="@+id/toggleFlagMode"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="3"
			android:text="@string/flag_mode" />

		<Switch
			android:id="@+id/toggleBombs"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="3"
			android:text="@string/show_bombs" />

		<TextView
			android:id="@+id/showNumberOfBombs"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="3" />
	</LinearLayout>

	<com.example.minesweeper20.view.GameCanvas
		android:id="@+id/gridCanvas"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_above="@id/bottomPanel"
		android:layout_below="@id/topPanel"
		android:layout_alignParentStart="true"
		android:layout_alignParentEnd="true"
		android:tag="@string/is_game_canvas_layout" />

	<LinearLayout
		android:id="@+id/bottomPanel"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:orientation="horizontal">

		<Switch
			android:id="@+id/toggleGaussHints"
			android:layout_height="wrap_content"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:text="@string/gauss_hints" />

		<Switch
			android:id="@+id/toggleHints"
			android:layout_height="wrap_content"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:text="@string/show_hints" />

		<Switch
			android:id="@+id/toggleBombProbability"
			android:layout_height="wrap_content"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:text="@string/show_bomb_probability" />

	</LinearLayout>
</RelativeLayout>
